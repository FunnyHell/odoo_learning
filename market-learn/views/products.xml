<odoo>

    <data>
        <record model="ir.ui.view" id="product_details_tree_view">
            <field name="name">market.product.tree</field>
            <field name="model">market.product</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="cost"/>
                    <field name="on_sale"/>
                    <field name="note"/>
                    <field name="seller"/>
                </tree>
            </field>
        </record>
    </data>

    <record model="ir.ui.view" id="product_details_form_view">
        <field name="name">market.product.form</field>
        <field name="model">market.product</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
                <field name="cost"/>
                <field name="on_sale"/>
                <field name="note"/>
                <field name="seller"/>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="market_product_action">
        <field name="name">Access Product</field>
        <field name="res_model">market.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_product_details"
              action="market_product_action"
              parent="menu_products"
              name="Product list"
              sequence="1"/>

</odoo>